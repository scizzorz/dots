        <y>11</y>
        <height>1394</height>
        <width>2275</width>
      </action>
    </keybind>

    <!-- left/right pane -->
    <keybind key="H-a">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>11</x>
        <y>11</y>
        <height>1394</height>
        <width>1703</width>
      </action>
    </keybind>
    <keybind key="H-s">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>868</x>
        <y>11</y>
        <height>1394</height>
        <width>1703</width>
      </action>
    </keybind>
    <keybind key="H-d">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>1725</x>
        <y>11</y>
        <height>1394</height>
        <width>1703</width>
      </action>
    </keybind>

    <keybind key="H-h">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>11</x>
        <y>11</y>
        <height>1394</height>
        <width>846</width>
      </action>
    </keybind>
    <keybind key="H-j">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>11</x>
        <y>11</y>
        <height>1394</height>
        <width>2560</width>
      </action>
    </keybind>
    <keybind key="H-k">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
