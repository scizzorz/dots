<?xml version="1.0" encoding="UTF-8"?>
<!-- Do not edit this file, it will be overwritten on install.
Copy the file to $HOME/.config/openbox/ instead. -->
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <resistance>
    <strength>30</strength>
    <screen_edge_strength>40</screen_edge_strength>
  </resistance>
  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Active</monitor>
    <primaryMonitor>Active</primaryMonitor>
  </placement>
  <theme>
    <name>slate</name>
    <titleLayout>LD</titleLayout>
    <keepBorder>yes</keepBorder>
    <animateIconify>no</animateIconify>
    <font place="ActiveWindow">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="InactiveWindow">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="MenuHeader">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="MenuItem">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Liberation Sans</name>
      <size>10</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
  </theme>
  <desktops>
    <number>1</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>I</name>
      <name>II</name>
      <name>III</name>
      <name>IV</name>
      <name>V</name>
      <name>VIV</name>
      <name>VII</name>
      <name>VIII</name>
      <name>IX</name>
      <name>X</name>
    </names>
    <popupTime>1000</popupTime>
  </desktops>
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <!-- 'Always', 'Never', or 'Nonpixel' (xterms and such) -->
    <popupPosition>Center</popupPosition>
    <!-- 'Center', 'Top', or 'Fixed' -->
    <popupFixedPosition>
      <x>10</x>
      <y>10</y>
    </popupFixedPosition>
  </resize>
  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>
  <dock>
    <position>TopLeft</position>
    <!-- (Top|Bottom)(Left|Right|)|Top|Bottom|Left|Right|Floating -->
    <floatingX>0</floatingX>
    <floatingY>0</floatingY>
    <noStrut>no</noStrut>
    <stacking>Above</stacking>
    <!-- 'Above', 'Normal', or 'Below' -->
    <direction>Vertical</direction>
    <!-- 'Vertical' or 'Horizontal' -->
    <autoHide>no</autoHide>
    <hideDelay>300</hideDelay>
    <!-- in milliseconds (1000 = 1 second) -->
    <showDelay>300</showDelay>
    <!-- in milliseconds (1000 = 1 second) -->
    <moveButton>Middle</moveButton>
    <!-- 'Left', 'Middle', 'Right' -->
  </dock>
  <keyboard>
    <chainQuitKey>C-g</chainQuitKey>

    <!-- switch desktops -->
    <keybind key="C-A-Left">
      <action name="GoToDesktop">
        <to>left</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="C-A-Right">
      <action name="GoToDesktop">
        <to>right</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="S-A-Left">
      <action name="MoveResizeTo">
        <monitor>prev</monitor>
      </action>
    </keybind>
    <keybind key="S-A-Right">
      <action name="MoveResizeTo">
        <monitor>next</monitor>
      </action>
    </keybind>

    <!-- close window -->
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>

    <!-- screenshots -->
    <!-- full monitor -->
    <keybind key="Print">
      <action name="Execute">
        <command>scrot ~/screenshots/%Y-%m-%d-%H%M%S.png</command>
      </action>
    </keybind>

    <!-- focused window -->
    <keybind key="A-Print">
      <action name="Execute">
        <command>scrot --focused --border ~/screenshots/%Y-%m-%d-%H%M%S.png</command>
      </action>
    </keybind>

    <!-- interactive select -->
    <keybind key="S-Print">
      <action name="Execute">
        <command>scrot --select ~/screenshots/%Y-%m-%d-%H%M%S.png</command>
      </action>
    </keybind>

    <!-- alt+tab -->
    <keybind key="A-Tab">
      <action name="NextWindow">
        <dialog>list</dialog>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>

    <!-- window tiling -->
    <!-- maximize -->
    <keybind key="H-Return">
      <action name="ToggleMaximize"/>
    </keybind>

    <!-- vertical thirds -->
    <keybind key="H-q">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>11</x>
        <y>11</y>
        <height>1394</height>
        <width>1132</width>
      </action>
    </keybind>

    <keybind key="H-e">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>1154</x>
        <y>11</y>
        <height>1394</height>
        <width>1132</width>
      </action>
    </keybind>

    <keybind key="H-t">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>2297</x>
